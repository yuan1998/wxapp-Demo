/* pages/self/self.wxss */

page{
	background-color: #f5f5f5;
}
.user-bar{
	height: 150px;
}

.user-avatar{
	margin-top: 10px;
	height: 100px;
	width: 100px;
	border-radius:50%;
}

.user-control-panel{
	display: block;
}

.user-control-panel .flex-row{
	flex-grow: 1;
}

.item{
	color:#333;
	padding: 0.7em 0.6em;
	background: #fff;
	cursor:pointer;
	font-size: 15px;
	font-weight: 500;
	border-bottom: 1px solid #f1f1f1;
}
.item.last{
	border-bottom: 1px solid transparent;
}

.hr{
	padding-top: 8px;
}

.info view{
	color:#c1c1c1;
	font-size: 14px;
}
.info{
	padding-top: 20px;
	line-height: 20px;
}
